
@{
    ViewData["Title"] = "SignUp";
}

<div class="row" style="margin-left: 10px;">
    <div class="col-md-4 col-md-offset-4">
        <h1>Sign Up</h1>
        <form action="./create_acc.php" method="post">
            <div class="form-group">
                <label for="login">Login</label>
                <input type="text" name="login" id="login" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="email">e-mail</label>
                <input type="email" name="email" id="email" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="password">Password <br> <p style="font-size: 12px;">Hint: The password should be at least six characters long. To keep your data safe, we require a strong password containing at least one lowercase, uppercase and number.</p></label>
                <input type="password" name="password" id="password" class="form-control" pattern="[\w]{6,}" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="password_2" id="password_2" class="form-control" required>
            </div>
            <div class="form-group">
                <input type="submit" value="Sign Up" class="form-control btn btn-primary">
            </div>
        </form>
    </div>
</div>
